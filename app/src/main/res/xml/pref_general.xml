<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">



    <EditTextPreference
        android:defaultValue="192.168.220.108"
        android:key="edit_text_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Ip address"
        android:summary="192.168.220.108"
        android:inputType="text"/>
    <EditTextPreference
        android:defaultValue="9750"
        android:key="edit_text_port"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Port"
        android:inputType="number"
        android:summary="9750"
        android:digits="0123456789"/>
    <EditTextPreference
        android:defaultValue="1"
        android:digits="0123456789"
        android:inputType="number"
        android:key="edit_text_rc_id"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="1"
        android:title="Single mode rc id" />
    <EditTextPreference
        android:defaultValue="1"
        android:inputType="textPassword"
        android:key="edit_text_password"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Settings password" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_autoconnect"
        android:title="Reconnect automatically" />

</PreferenceScreen>
